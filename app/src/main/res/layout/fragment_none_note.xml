<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NoneNoteFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/none_note_pic"
        app:layout_constraintBottom_toTopOf="@+id/fab_menu_actions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="@string/none_note_text"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_menu_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="88dp"
        android:backgroundTint="@color/main_blue"
        app:icon="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu_add_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_blue"
        android:contentDescription="Scan text"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_camera_alt_24"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/fab_menu_actions"
        app:layout_constraintEnd_toStartOf="@+id/fab_menu_actions" />

    <TextView
        android:id="@+id/fab_menu_add_alarm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text=""
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fab_menu_add_camera"
        app:layout_constraintEnd_toStartOf="@+id/fab_menu_add_camera"
        app:layout_constraintTop_toTopOf="@+id/fab_menu_add_camera" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu_add_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_voice_24"
        android:backgroundTint="@color/main_blue"
        android:contentDescription="Take Note with Voice"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/fab_menu_actions"
        app:layout_constraintStart_toEndOf="@+id/fab_menu_actions" />

    <TextView
        android:id="@+id/fab_menu_add_voice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text=""
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fab_menu_add_normal_note"
        app:layout_constraintEnd_toStartOf="@+id/fab_menu_add_normal_note"
        app:layout_constraintTop_toTopOf="@+id/fab_menu_add_normal_note" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu_add_normal_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:backgroundTint="@color/main_blue"
        android:contentDescription="Take a Note"
        android:src="@drawable/ic_baseline_note_add_24"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/fab_menu_actions"
        app:layout_constraintEnd_toEndOf="@+id/fab_menu_actions" />

    <TextView
        android:id="@+id/fab_menu_add_normal_note_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text=""
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fab_menu_add_normal_note"
        app:layout_constraintEnd_toStartOf="@+id/fab_menu_add_normal_note"
        app:layout_constraintTop_toTopOf="@+id/fab_menu_add_normal_note" />



</androidx.constraintlayout.widget.ConstraintLayout>