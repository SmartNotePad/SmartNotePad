<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:circularflow_radiusInDP="100dp"
    tools:context=".ui.note.NoteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/main_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="58dp"
            android:text="SmartNotePad"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="36dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SearchView
            android:layout_width="338dp"
            android:layout_height="41dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="36dp"

            android:layout_marginBottom="30dp"
            android:background="@drawable/search_corner"
            android:queryHint="Find your notes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/recy"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_menu_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/main_blue"
        app:icon="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu_add_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_blue"
        android:contentDescription="Scan text"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        android:src="@drawable/ic_baseline_camera_alt_24"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/fab_menu_actions"
        app:layout_constraintEnd_toStartOf="@+id/fab_menu_actions" />

    <TextView
        android:id="@+id/fab_menu_add_alarm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="alarm"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/fab_menu_add_camera"
        app:layout_constraintEnd_toStartOf="@+id/fab_menu_add_camera"
        app:layout_constraintTop_toTopOf="@+id/fab_menu_add_camera" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu_add_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_voice_24"
        android:backgroundTint="@color/main_blue"
        android:contentDescription="Take Note with Voice"
        android:layout_marginStart="16dp"
        android:visibility="visible"
        android:layout_marginBottom="16dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/fab_menu_actions"
        app:layout_constraintStart_toEndOf="@+id/fab_menu_actions" />

    <TextView
        android:id="@+id/fab_menu_add_voice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="voice"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/fab_menu_add_normal_note"
        app:layout_constraintEnd_toStartOf="@+id/fab_menu_add_normal_note"
        app:layout_constraintTop_toTopOf="@+id/fab_menu_add_normal_note" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu_add_normal_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        android:backgroundTint="@color/main_blue"
        android:contentDescription="Take a Note"
        android:src="@drawable/ic_baseline_note_add_24"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/fab_menu_actions"
        app:layout_constraintEnd_toEndOf="@+id/fab_menu_actions" />

    <TextView
        android:id="@+id/fab_menu_add_normal_note_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/fab_menu_add_normal_note"
        app:layout_constraintEnd_toStartOf="@+id/fab_menu_add_normal_note"
        app:layout_constraintTop_toTopOf="@+id/fab_menu_add_normal_note" />

    <TextView
        android:id="@+id/tvZeroNoteInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>